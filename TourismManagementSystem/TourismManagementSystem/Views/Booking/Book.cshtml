@model TourismManagementSystem.Models.ViewModels.AgencyBookingVm
@{
    ViewBag.Title = "Booking Management";
}

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-2">Agency Booking Management</h3>
        <p class="text-white-50 mb-0">Manage all bookings for your packages</p>
    </div>
</div>

<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-light fw-bold">Bookings</div>
        <div class="card-body p-0">
            @if (!Model.Bookings.Any())
            {
                <div class="p-3 text-muted">No bookings available.</div>
            }
            else
            {
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Package</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Participants</th>
                            <th>Payment Status</th>
                            <th>Amount</th>
                            <th>Approval</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.Bookings)
                        {
                            <tr>
                                <td>@b.PackageTitle</td>
                                <td>@b.CustomerName</td>
                                <td>@b.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@b.Participants</td>
                                <td>@b.PaymentStatus</td>
                                <td>@b.Amount.ToString("C")</td>
                                <td>
                                    @if (b.IsApproved == null)
                                    {
                                        <form method="post" action="@Url.Action("ApproveBooking","Agency")" style="display:inline;">
                                            <input type="hidden" name="bookingId" value="@b.BookingId" />
                                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                        </form>
                                        <form method="post" action="@Url.Action("RejectBooking","Agency")" style="display:inline;">
                                            <input type="hidden" name="bookingId" value="@b.BookingId" />
                                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                        </form>
                                    }
                                    else if (b.IsApproved == true)
                                    {
                                        <span class="text-success fw-bold">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">Rejected</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
