@using TourismManagementSystem.Models.ViewModels
@model PackageBookingVm
    @{
    ViewBag.Title = "Edit Booking - " + Model.PackageTitle;
    }
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Edit Booking
        </h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action(" Index", "Home" )">Home</a></li>
            <li class="breadcrumb-item active text-white">Edit Booking</li>
        </ol>
    </div>
</div>
<!-- Header End -->
<h2>Edit Booking: @Model.PackageTitle</h2>

    @using (Html.BeginForm("EditBooking", "PublicPackage", FormMethod.Post))
    {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookingId)
    @Html.HiddenFor(m => m.PackageId)

<div class="form-group">
    @Html.LabelFor(m => m.Participants)
    @Html.TextBoxFor(m => m.Participants, new { @class = "form-control", type = "number", min = "1", max = "100" })
    @Html.ValidationMessageFor(m => m.Participants)
</div>

<div class="form-group">
    @Html.Label("Select Session")
    @Html.DropDownListFor(m => m.SelectedSessionId, new SelectList(Model.UpcomingSessions, "SessionId", "StartDate"), "Select a session", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.SelectedSessionId)
</div>

<button type="submit" class="btn btn-primary">Update Booking</button>
<a href="@Url.Action(" Details", "PublicPackage" , new { id=Model.PackageId })" class="btn btn-secondary">Back</a>
    }
