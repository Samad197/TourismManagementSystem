@model TourismManagementSystem.Models.ViewModels.PublicPackageDetailsVm

@{
    ViewBag.Title = "Package Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4" style="max-width:900px;">
    <div class="row">
        <div class="col-md-7">
            <h3>@Model.Title</h3>
            <p class="text-muted">Offered by @Model.OwnerName (@Model.OwnerType)</p>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Duration:</strong> @Model.DurationDays days</p>
            <p><strong>Available Dates:</strong> @Model.StartDate.ToString("yyyy-MM-dd") - @Model.EndDate.ToString("yyyy-MM-dd")</p>

            <a href="@Url.Action(" Book", "PublicPackage" , new { id=Model.PackageId })" class="btn btn-success">
                Book Now
            </a>
        </div>
        <div class="col-md-5">
            <img src="@Model.ThumbnailPath" class="img-fluid rounded shadow" alt="@Model.Title" />
        </div>
    </div>

    <hr />

    <h4>Tourist Reviews</h4>
    @if (Model.Reviews.Any())
    {
    <ul class="list-group">
        @foreach (var r in Model.Reviews)
        {
        <li class="list-group-item">
            <strong>@r.TouristName</strong> rated <span class="text-warning">@r.Rating ★</span>
            <p>@r.Comment</p>
        </li>
        }
    </ul>
    }
    else
    {
    <p class="text-muted">No reviews yet. Be the first to review!</p>
    }
</div>
