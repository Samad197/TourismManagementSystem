@model IEnumerable<TourismManagementSystem.Models.ViewModels.FeedbackViewModel>

@{
    ViewBag.Title = $"{ViewBag.RoleName} Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">All Feedback</h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active text-white">Feedback</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-4">
    @if (TempData["Success"] != null)
    {<div class="alert alert-success">@TempData["Success"]</div>}
    @if (TempData["Error"] != null)
    {<div class="alert alert-danger">@TempData["Error"]</div>}

    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-light fw-bold">
            Customer Feedback
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="p-3 text-muted">No feedback submitted yet.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="tblFeedback" class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Customer</th>
                                <th>Package</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var f in Model)
                            {
                                <tr>
                                    <td>@f.CustomerName</td>
                                    <td>@f.PackageTitle</td>
                                    <td>
                                        @for (int i = 0; i < f.Rating; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        @for (int i = f.Rating; i < 5; i++)
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    </td>
                                    <td>@(f.Comment?.Length > 100 ? f.Comment.Substring(0, 100) + "..." : f.Comment)</td>
                                    <td>@f.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(function () {
            $('#tblFeedback').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                ordering: true,
                responsive: true,
                language: {
                    search: "Search feedback:",
                    lengthMenu: "Show _MENU_ reviews",
                    info: "Showing _START_ to _END_ of _TOTAL_ reviews"
                }
            });
        });
    </script>
}
