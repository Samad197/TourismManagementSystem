                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>Agencies awaiting approval</div>
                        <span class="badge bg-warning text-dark">@Model.PendingAgencies</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>Guides awaiting approval</div>
                        <span class="badge bg-warning text-dark">@Model.PendingGuides</span>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Approvals","Admin")">
                        <i class="fas fa-user-check me-1"></i> Go to Approvals
                    </a>
                </div>
            </div>
        </div>

