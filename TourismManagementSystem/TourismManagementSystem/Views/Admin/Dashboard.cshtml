        <!-- Recent Booking Activity -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">Recent Booking Activity</div>
                <div class="card-body p-0">
                    @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var b in Model.RecentBookings)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <div class="small">
                                            <div class="fw-semibold">@b.PackageTitle</div>
                                            <div class="text-muted">by @b.CustomerName • @b.CreatedAt.ToString("dd MMM HH:mm")</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="small">@b.Amount.ToString("C0", new System.Globalization.CultureInfo("en-AU"))</div>

                                            <span class="badge @(b.PaymentStatus == "Paid" ? "bg-success" : "bg-secondary")">
                                                @b.PaymentStatus
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
