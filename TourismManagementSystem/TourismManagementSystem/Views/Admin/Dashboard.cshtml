    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Optional fields (won’t crash if your VM doesn’t have them yet)
    var pendingPayments = 0M;
    try { pendingPayments = (decimal)(ViewBag.PendingPayments ?? (Model.GetType().GetProperty("PendingPayments") != null ? (Model.GetType().GetProperty("PendingPayments").GetValue(Model) ?? 0M) : 0M)); } catch { }
    var recentBookings = ViewBag.RecentBookings as IEnumerable<dynamic>;
    var paymentQueue = ViewBag.PaymentQueue as IEnumerable<dynamic>;
}

