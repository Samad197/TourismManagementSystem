    <!-- KPI Cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <div class="text-muted">Pending Agencies</div>
                <div class="display-6">@Model.PendingAgencies</div>
                <a class="small mt-2" href="@Url.Action("Approvals","Admin")">Review</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm h-100">
                <div class="text-muted">Pending Guides</div>
                <div class="display-6">@Model.PendingGuides</div>
                <a class="small mt-2" href="@Url.Action("Approvals","Admin", new { tab="guides" })">Review</a>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card p-3 shadow-sm h-100">
                <div class="text-muted">Total Users</div>
                <div class="display-6">@Model.TotalUsers</div>
                <a class="small mt-2" href="@Url.Action("Users","Admin")">Manage</a>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card p-3 shadow-sm h-100">
                <div class="text-muted">Total Bookings</div>
                <div class="display-6">@Model.TotalBookings</div>
                <span class="small text-muted">All time</span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card p-3 shadow-sm h-100">
                <div class="text-muted">Paid Revenue</div>
                <div class="h4 mb-0"> @Model.PaidRevenue.ToString("C", new System.Globalization.CultureInfo("en-AU"))</div>
               </p>

                <span class="small text-muted">All time</span>
            </div>
        </div>
    </div>

