@model IEnumerable<TourismManagementSystem.Models.ViewModels.PendingUserVm>
@{
    ViewBag.Title = "Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width:900px;">
        <h3 class="text-white display-3 mb-4">Pending Approvals</h3>
        <p class="text-white-50 mb-0">Approve Agencies & Guides to go live</p>
    </div>
</div>

@Html.Partial("_Flash")

<div class="container py-4">
    @if (!Model.Any())
    {
        <div class="alert alert-success">No pending Agencies or Guides.</div>
    }
    else
    {
        <div class="row g-2 mb-3 align-items-end">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input id="searchBox" type="text" class="form-control" placeholder="Search by name or email">
            </div>
            <div class="col-md-6 text-md-end">
                <a href="@Url.Action("Users","Admin")" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-users me-1"></i> Manage Users
                </a>
                <a href="@Url.Action("Reports","Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-chart-line me-1"></i> Reports
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table id="pendingTable" class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Role</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Profile Status</th>
                        <th style="width:260px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        var statusBadge = string.IsNullOrEmpty(u.ProfileStatus) ? "-" :
                            (u.ProfileStatus.Equals("Approved", StringComparison.OrdinalIgnoreCase) ? "<span class='badge bg-success'>Approved</span>"
                             : "<span class='badge bg-warning text-dark'>" + u.ProfileStatus + "</span>");

                        <tr>
                            <td>
                                <span class="badge @(u.RoleName=="Agency"?"bg-primary":"bg-info")">@u.RoleName</span>
                            </td>
                            <td>@u.FullName</td>
                            <td>@u.Email</td>
                            <td>@Html.Raw(statusBadge)</td>
                            <td class="d-flex">
                                <a class="btn btn-sm btn-outline-secondary me-2"
                                   href="@Url.Action("UserDetails","Admin", new { id = u.UserId })">
                                    View Details
                                </a>

                                <button type="button"
                                        class="btn btn-sm btn-success me-2"
                                        data-bs-toggle="modal"
                                        data-bs-target="#decisionModal"
                                        data-action="Approve"
                                        data-id="@u.UserId"
                                        data-name="@u.FullName">
                                    Approve
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#decisionModal"
                                        data-action="Reject"
                                        data-id="@u.UserId"
                                        data-name="@u.FullName">
                                    Reject
                                </button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Decision Modal -->
<div class="modal fade" id="decisionModal" tabindex="-1" aria-labelledby="decisionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="decisionForm" method="post" action="@Url.Action("Approve","Admin")">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="decisionLabel">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="decisionUserId" />
                    <p class="mb-0">
                        Are you sure you want to
                        <strong id="decisionVerb">approve</strong>
                        <span id="decisionUserName" class="fw-semibold"></span>?
                    </p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn" id="decisionSubmitBtn">Yes, proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts{
    <script>
    (function(){
        // --- search filter ---
        var box = document.getElementById('searchBox');
        var rows = document.querySelectorAll('#pendingTable tbody tr');
        if (box) {
            box.addEventListener('input', function(){
                var q = this.value.toLowerCase();
                rows.forEach(function(tr){
                    tr.style.display = tr.innerText.toLowerCase().indexOf(q) > -1 ? '' : 'none';
                });
            });
        }

        // --- modal wiring ---
        var decisionModal = document.getElementById('decisionModal');
        if (decisionModal) {
            decisionModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget; // the button that triggered the modal
                var action = (button.getAttribute('data-action') || 'Approve').trim();
                var userId = button.getAttribute('data-id');
                var userName = button.getAttribute('data-name') || '';

                var form = document.getElementById('decisionForm');
                var idInput = document.getElementById('decisionUserId');
                var verbSpan = document.getElementById('decisionVerb');
                var nameSpan = document.getElementById('decisionUserName');
                var submitBtn = document.getElementById('decisionSubmitBtn');
                var title = document.getElementById('decisionLabel');

                // Set form action based on action
                var approveUrl = '@Url.Action("Approve","Admin")';
                var rejectUrl  = '@Url.Action("Reject","Admin")';
                form.setAttribute('action', action === 'Reject' ? rejectUrl : approveUrl);

                // Fill fields
                idInput.value = userId;
                verbSpan.textContent = action.toLowerCase();
                nameSpan.textContent = userName ? ('“' + userName + '”') : '';

                // Button style + title
                if (action === 'Reject') {
                    submitBtn.classList.remove('btn-success');
                    submitBtn.classList.add('btn-outline-danger');
                    title.textContent = 'Confirm Rejection';
                } else {
                    submitBtn.classList.remove('btn-outline-danger');
                    submitBtn.classList.add('btn-success');
                    title.textContent = 'Confirm Approval';
                }
            });
        }
    })();
    </script>
}
