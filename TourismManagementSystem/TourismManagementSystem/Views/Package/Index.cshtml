@model IEnumerable<TourismManagementSystem.Models.ViewModels.MyPackageListItemVm>
@{
    ViewBag.Title = "My Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Packages
        </h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            @*<li class="breadcrumb-item"><a href="#">Pages</a></li>*@
            <li class="breadcrumb-item active text-white">Packages</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">My Packages</h3>
        <a href="@Url.Action("Create","Package")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create Package
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No packages yet. Click <strong>Create Package</strong> to add your first tour.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th class="text-end">Price</th>
                        <th>Duration</th>
                        <th>Max Group</th>
                        <th>Sessions</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Title</td>
                            <td class="text-end">@p.Price.ToString("0.00")</td>
                            <td>@p.DurationDays d</td>
                            <td>@p.MaxGroupSize</td>
                            <td>@p.SessionsCount</td>
                            <td>@p.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit","Package", new { id = p.PackageId })">Edit</a>
                                @* links you can implement later: Sessions, Images, Delete *@
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Sessions","Agency", new { packageId = p.PackageId })">Sessions</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
