@model IEnumerable<TourismManagementSystem.Models.ViewModels.MyPackageListItemVm>
@{
    ViewBag.Title = "My Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">Packages</h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active text-white">Packages</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">My Packages</h3>
        <a href="@Url.Action("Create","Package")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create Package
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No packages yet. Click <strong>Create Package</strong> to add your first tour.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table id="tblPackages" class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th class="text-end">Price</th>
                        <th>Duration</th>
                        <th>Max Group</th>
                        <th>Sessions</th>
                        <th>Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Title</td>
                            <td class="text-end">@p.Price.ToString("0.00")</td>
                            <td>@p.DurationDays d</td>
                            <td>@p.MaxGroupSize</td>
                            <td>@p.SessionsCount</td>
                            <td>@p.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-primary"
                                       href="@Url.Action("Edit","Package", new { id = p.PackageId })"
                                       data-bs-toggle="tooltip" title="Edit this package">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>



                                    <a class="btn btn-sm btn-outline-success"
                                       href="@Url.Action("Create", "PackageSessions", new { packageId = p.PackageId })"
                                       data-bs-toggle="tooltip" title="Add a new session">
                                        <i class="fas fa-plus-circle"></i> Add Session
                                    </a>


                                    <a class="btn btn-sm btn-outline-danger"
                                       href="@Url.Action("Delete","Package", new { id = p.PackageId })"
                                       onclick="return confirm('Are you sure you want to delete this package?');"
                                       data-bs-toggle="tooltip" title="Delete this package">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(function () {
            $('#tblPackages').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                ordering: true,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [6] } // disable sorting on Actions column
                ],
                language: {
                    search: "Search packages:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ packages"
                }
            });

            // Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}
