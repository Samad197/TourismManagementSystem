@model TourismManagementSystem.Models.Session
@{
    var pkg = ViewBag.Package as TourismManagementSystem.Models.TourPackage;
    ViewBag.Title = "Delete Session — " + (pkg?.Title ?? "");
}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Session
        </h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            @*<li class="breadcrumb-item"><a href="#">Pages</a></li>*@
            <li class="breadcrumb-item active text-white">Session</li>
        </ol>
    </div>
</div>
<!-- Header End -->
<div class="container mt-4">
    <h2>Delete Session — @pkg.Title</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this session?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsCanceled ? "Canceled" : "Active")</dd>
    </dl>

    @using (Html.BeginForm("Delete", "PackageSessions", FormMethod.Post, new { @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("packageId", Model.PackageId)
        @Html.Hidden("id", Model.SessionId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "PackageSessions", new { packageId = Model.PackageId })" class="btn btn-secondary">Cancel</a>
    }
</div>
