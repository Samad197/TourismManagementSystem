@model TourismManagementSystem.Models.ViewModels.SessionFormVm
@{
    var pkg = ViewBag.Package as TourismManagementSystem.Models.TourPackage;
    ViewBag.Title = "Edit Session — " + (pkg?.Title ?? "");
}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Session
        </h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            @*<li class="breadcrumb-item"><a href="#">Pages</a></li>*@
            <li class="breadcrumb-item active text-white">Session</li>
        </ol>
    </div>
</div>
<!-- Header End -->
<div class="container mt-4">
    <h2>Edit Session — @pkg.Title</h2>
    @using (Html.BeginForm("Edit", "PackageSessions", FormMethod.Post, new { @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PackageId)
        @Html.HiddenFor(m => m.SessionId)

        <div class="mb-3">
            @Html.LabelFor(m => m.StartDate)
            @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.EndDate)
            @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Capacity)
            @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number", min = "1" })
            @Html.ValidationMessageFor(m => m.Capacity, "", new { @class = "text-danger" })
        </div>
        <div class="form-check mb-3">
            @Html.CheckBoxFor(m => m.IsCanceled, new { @class = "form-check-input", id = "chkCanceled" })
            <label class="form-check-label" for="chkCanceled">@Html.DisplayNameFor(m => m.IsCanceled)</label>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Notes)
            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 3 })
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="@Url.Action("Index", "PackageSessions", new { packageId = Model.PackageId })" class="btn btn-secondary">Cancel</a>
    }
</div>
