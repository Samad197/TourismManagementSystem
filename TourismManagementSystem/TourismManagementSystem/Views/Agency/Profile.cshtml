@model TourismManagementSystem.Models.AgencyProfile
@{
    ViewBag.Title = "Agency Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4" style="max-width:900px;">
    <h3 class="mb-3">Agency Profile</h3>
    @using (Html.BeginForm("Profile", "Agency", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.AgencyName)
            @Html.TextBoxFor(m => m.AgencyName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.AgencyName)
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, 5, 60, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Website)
            @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.Label("VerificationDocPath", "Verification Document (URL or path)")
            @Html.TextBoxFor(m => m.VerificationDocPath, new { @class = "form-control" })
        </div>

        <button class="btn btn-primary" type="submit">Save Profile</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Dashboard","Agency")">Back to Dashboard</a>
    }
</div>
