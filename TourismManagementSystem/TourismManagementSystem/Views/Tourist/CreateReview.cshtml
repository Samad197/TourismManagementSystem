@model TourismManagementSystem.Models.ViewModels.CreateReviewVm
@{
    ViewBag.Title = "Leave a Review";
}

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width:900px;">
        <h3 class="text-white display-3 mb-2">Leave a Review</h3>
        <p class="text-white-50 mb-0">@Model.PackageTitle — @Model.SessionStart.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<div class="container py-4" style="max-width: 760px;">
    @using (Html.BeginForm("CreateReview", "Tourist", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.BookingId)
        @Html.HiddenFor(m => m.PackageId)
        @Html.HiddenFor(m => m.PackageTitle)
        @Html.HiddenFor(m => m.SessionStart)

        @Html.ValidationSummary(false, "", new { @class = "alert alert-warning" })

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Rating, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Rating,
                        new SelectList(new[] { 1, 2, 3, 4, 5 }),
                        "-- Select Rating (1-5) --",
                        new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Comment, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Comment, 6, 50, new { @class = "form-control", placeholder = "Share your experience..." })
                    @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("History","Tourist")" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </div>
            </div>
        </div>
    }
</div>
