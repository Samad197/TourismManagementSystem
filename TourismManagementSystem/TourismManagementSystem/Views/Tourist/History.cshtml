<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">Booking History</h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            @*<li class="breadcrumb-item"><a href="@packagesUrl">Packages</a></li>*@
        <li class="breadcrumb-item active text-white">Booking History</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-4">
    @*@if (TempData["Success"] != null)
        {<div class="alert alert-success">@TempData["Success"]</div>}
        @if (TempData["Error"] != null)
        {<div class="alert alert-danger">@TempData["Error"]</div>}*@

    @Html.Partial("_Flash")


    @if (!Model.Any())
    {
        <div class="alert alert-info">No completed bookings yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table id="tblHistory" class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Package</th>
                        <th>Session</th>
                        <th>Participants</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.PackageTitle</td>
                            <td>
                                @(b.StartDate.ToString("dd MMM yyyy"))
                                -
                                @(b.EndDate.HasValue ? b.EndDate.Value.ToString("dd MMM yyyy") : "-")
                            </td>


                            <td>@b.Participants</td>
                            <td>
                                @if (b.IsApproved == true)
                                {<span class="badge bg-success">Approved</span> }
                                else if (b.IsApproved == false)
                                { <span class="badge bg-danger">Rejected</span> }
                                else
                                { <span class="badge bg-warning text-dark">Pending</span>}
                            </td>
                            <td>
                                <span class="badge @(b.PaymentStatus=="Paid"?"bg-success":"bg-secondary")">@b.PaymentStatus</span>
                            </td>
                            <td>
                                @if (b.CanReview)
                                {
                                    <a class="btn btn-sm btn-outline-success"
                                       href="@Url.RouteUrl("TouristCreateReview", new { bookingId = b.BookingId })">
                                        Leave Feedback
                                    </a>
                                }
                                else if (b.ExistingFeedbackId.HasValue)
                                {
                                    <div class="review-display text-start">
                                        <!-- Show rating as stars -->
                                        <div class="mb-1">
                                            @{
                                                int rating = b.Rating ?? 0;
                                                for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= rating)
                                                    {
                                                        @:<i class="fa fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        @:<i class="fa fa-star text-muted"></i>
                                                    }
                                                }
                                            }
                                        </div>

                                        <!-- Show comment -->
                                        @if (!string.IsNullOrWhiteSpace(b.Comment))
                                        {
                                            <small class="text-muted fst-italic">"@b.Comment"</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">No comment provided.</small>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Not Eligible</span>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(function () {
            $('#tblHistory').DataTable({
                pageLength: 10,
                ordering: true,
                responsive: true,
                language: {
                    search: "Search bookings:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ bookings"
                }
            });
        });
    </script>
}
