
@using System.Security.Claims
@{
    // Auth
    bool isAuth = User?.Identity?.IsAuthenticated ?? false;

    // Try claims first
    bool isAdmin = isAuth && User.IsInRole("Admin");
    bool isAgency = isAuth && User.IsInRole("Agency");
    bool isGuide = isAuth && User.IsInRole("Guide");
    bool isTourist = isAuth && User.IsInRole("Tourist");

    // Fallback to ViewBag (if you set it in BaseController)
    var vbRole = ViewBag.RoleName as string;
    if (isAuth && !string.IsNullOrEmpty(vbRole))
    {
        isAdmin = vbRole == "Admin";
        isAgency = vbRole == "Agency";
        isGuide = vbRole == "Guide";
        isTourist = vbRole == "Tourist";
    }

    // Helpers
    Func<string, bool> IsRole = role => isAuth && (User.IsInRole(role) || string.Equals(vbRole, role));

    // Approval flag (for Agency/Guide)
    bool isApproved = ViewBag.IsApproved is bool b && b;

    // Active-class helpers (use Func instead of local functions)
    Func<string, string> active = name => (ViewBag.ActivePage as string) == name ? "active" : "";
    Func<string, string> activeGroup = name => (ViewBag.ActivePageGroup as string) == name ? "active" : "";
}



